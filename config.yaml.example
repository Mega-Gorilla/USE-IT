# Example configuration for browser-use.
# Copy this file to `config.yaml` and adjust the values as needed.

paths:
  # Root configuration directory. Derived paths fall back to this value.
  config_dir: ~/.config/browseruse
  profiles_dir: null
  downloads_dir: null
  extensions_dir: null
  cache_home: ~/.cache
  windows_font_dir: C:\Windows\Fonts

logging:
  level: info
  debug_log_file: null
  info_log_file: null
  cdp_level: WARNING

telemetry:
  anonymized: true
  cloud_sync: null
  cloud_api_url: https://api.browser-use.com
  cloud_ui_url: https://cloud.browser-use.com

llm:
  default_model: gpt-4.1-mini
  default_temperature: null
  azure_endpoint: ${AZURE_OPENAI_ENDPOINT}
  api_keys:
    openai: ${OPENAI_API_KEY}
    anthropic: ${ANTHROPIC_API_KEY}
    google: ${GOOGLE_API_KEY}
    groq: ${GROQ_API_KEY}
    novita: ${NOVITA_API_KEY}
    deepseek: ${DEEPSEEK_API_KEY}
    azure: ${AZURE_OPENAI_KEY}
  skip_api_key_verification: false

browser:
  headless: false
  user_data_dir: null
  downloads_path: null
  allowed_domains: []
  proxy:
    server: null
    bypass: []
    username: null
    password: null

agent:
  language: en
  max_steps: 100
  max_failures: 3
  use_vision: auto
  max_actions_per_step: 10
  # Enable human-in-the-loop approvals for each step.
  interactive_mode: false
